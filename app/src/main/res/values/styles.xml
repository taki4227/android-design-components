<resources>

    <!-- See https://developers.google.com/identity/branding-guidelines -->
    <style name="SignInWithGoogleButton" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="icon">@drawable/ic_googleg_logo_18dp</item>
        <item name="iconSize">18dp</item>
        <item name="iconStartPadding">24dp</item>
        <item name="iconTint">@null</item>
        <item name="cornerRadius">2dp</item>
    </style>

    <style name="SignInWithGoogleButton.Light">
        <item name="android:backgroundTint">#FFFFFF</item>
        <item name="android:textColor">#8A000000</item>
    </style>

    <style name="SignInWithGoogleButton.Dark">
        <item name="android:backgroundTint">#4285F4</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="icon">@drawable/ic_googleg_logo_dark_18dp</item>
        <item name="iconSize">40dp</item>
        <item name="android:paddingStart">1dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="iconTint">@null</item>
    </style>

    <style name="Widget.App.Chip.Badge" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
        <item name="chipBackgroundColor">@color/colorPrimary</item>
        <item name="chipEndPadding">2dp</item>
        <item name="chipStartPadding">0dp</item>
        <item name="chipMinHeight">24dp</item>
        <item name="ensureMinTouchTargetSize">false</item>
    </style>

</resources>
