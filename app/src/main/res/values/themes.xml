<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="Base.Theme" parent="Theme.MaterialComponents.Light.DarkActionBar" />

    <style name="Theme.App" parent="Base.Theme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
    </style>

    <style name="Theme.App.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Viewer" parent="Theme.App.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout" parent="">
        <item name="editTextStyle">@style/Widget.Smash.TextInputEditText</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout.MultiLine">
        <item name="editTextStyle">@style/Widget.Smash.TextInputEditText.MultiLine</item>
    </style>

</resources>